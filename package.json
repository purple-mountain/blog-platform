{
	"name": "blog-platform",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"dev": "npx concurrently \"npm run watch:compile\" \"npm run watch:run\"",
		"watch:compile": "swc src --watch --out-dir dist --include-dotfiles --strip-leading-paths",
		"watch:run": "npx nodemon dist/main.js",
		"build": "tsc --build",
		"start:prod": "node -r ./tsconfig-paths-bootstrap.js build/main.js",
		"typeorm": "tsx ./node_modules/typeorm/cli",
		"seed": "tsx ./src/database/seed.ts",
		"migrations:run": "npm run typeorm migration:run -- -d ./src/database/database.ts",
		"entity:create": "npm run typeorm entity:create -n",
		"migrations:generate": "npm run typeorm -- -d ./src/database/database.ts migration:generate ./src/database/migrations/$npm_config_name",
		"migrations:create": "npm run typeorm -- migration:create ./src/database/migrations/$npm_config_name",
		"migrations:revert": "npm run typeorm -- -d ./src/database/database.ts migration:revert",
		"format": "prettier --write .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix ",
		"test:int": "jest --config ./jest.config.json --selectProjects integration",
		"test:unit": "jest --config ./jest.config.json --selectProjects unit",
		"test:e2e": "jest --config ./jest.config.json --selectProjects end-to-end",
		"test": "jest --config ./jest.config.json",
		"prepare": "husky install"
	},
	"typeRoots": [
		"./node_modules/@types"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*": [
			"prettier --write ."
		]
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.21.0",
		"express-async-errors": "^3.1.1",
		"ioredis": "^5.4.1",
		"jsonwebtoken": "^9.0.2",
		"pg": "^8.13.0",
		"typeorm": "^0.3.20",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.11.1",
		"@faker-js/faker": "^8.4.1",
		"@swc/cli": "^0.4.1-nightly.20240914",
		"@swc/core": "^1.7.26",
		"@testcontainers/postgresql": "^10.13.2",
		"@testcontainers/redis": "^10.13.2",
		"@types/bcrypt": "^5.0.2",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/eslint__js": "^8.42.3",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.13",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/node": "^22.5.5",
		"@types/supertest": "^6.0.2",
		"chokidar": "^3.6.0",
		"concurrently": "^9.0.1",
		"eslint": "^9.11.1",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.10.0",
		"husky": "^8.0.0",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.10",
		"nodemon": "^3.1.6",
		"prettier": "3.3.3",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.19.1",
		"typeorm-extension": "^3.6.2",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.8.0"
	}
}
